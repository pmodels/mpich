    }
    elsif (/--?rundir=(.*)/) {
	$rundir = $1;
    }
    elsif (/--?projectsdir=(.*)/) {
	$projects_dir = $1;
    }
    elsif (/--?maxcount=(.*)/) {
	# max count.  Set to -1 for infinity
	$max_count = $1;
    }
    elsif (/--?maxtime=(.*)/) {
	# max time in seconds
	set_time_left( $1 );
    }
    elsif (/--?tests=(.*)/) {
	$tests = ":" . $1 . ":";
    }
