	$show = 1;
    }
    elsif (/--?debug/) {
	$debug = 1;
    }
    elsif (/--?envopt=(.*)/) {
	# Add a list of possible env values
	$env_array[$#env_array+1] = $1;
	$n_env    = $#env_array + 1;
    }
    elsif (/--?srcdir=(.*)/) {
	$srcdir  = $1;
    }
    elsif (/--?instdir=(.*)/) {
