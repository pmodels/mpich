    if [ "$docdir" = "@docdir@" ] ; then
        docdir=${datadir}/doc/${PACKAGE}
    fi
    if [ "$htmldir" = "@htmldir@" ] ; then
        htmldir=${docdir}
    fi
    if [ $appendUninstall = 0 ] ; then
        UNINSTALLFILE=$DESTDIR${sbindir}/${UNINSTALL_base}
    fi
